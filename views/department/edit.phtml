        submitHandler: function(form) {
          var formData = new FormData($("#edit")[0]);
          formData.append('department_id', '<?php echo $department_data->department_id ?>');
          
          $.ajax({
              type: "POST", // phương thức gởi đi
              url: "<?php echo BASE_URL ?>/department/editdepartment", // nơi mà dữ liệu sẽ chuyển đến khi submit
