                        <td>Mã phòng ban</td>
                        <td><input type="text" id="department_code" name="department_code" tabindex="1" required="required" autofocus value="<?php echo $department_data->department_code ?>"></td>
                        
                    </tr>
                    <tr>
                        <td>Tên phòng ban</td>
                        <td><input type="text" id="department_name" name="department_name" tabindex="2" required="required" value="<?php echo $department_data->department_name ?>"></td>
                    </tr>
                </table> 
            </form>
        </div>
