          var role = $('#role').val();
          var user_email = $('#user_email').val();
          
          $.ajax({
              type: "POST", // phương thức gởi đi
              url: "<?php echo BASE_URL ?>/user/adduser", // nơi mà dữ liệu sẽ chuyển đến khi submit
              data: {
                  username: username,
                  password: password,
                  role: role,
                  user_email: user_email,
