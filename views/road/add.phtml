    $('.road_oil_lit:eq('+rowIndex+')').inputmask("numeric", {
      radixPoint: ".",
      groupSeparator: ",",
      digits: 6,
      autoGroup: true,
      rightAlign: true,
      oncleared: function () { self.Value(''); }
    });
  }

  var sum = 0;
  var km = 0 ;
  $('.road_oil_lit').each(function(){
    sum += parseFloat(get_number(this));
  });
  $('.road_oil_km').each(function(){
    km += parseFloat(get_number(this));
  });

  $('#road_oil').val(sum);
  $('#road_km').val(km);

  $('#road_oil').inputmask("numeric", {
    radixPoint: ".",
    groupSeparator: ",",
    digits: 6,
    autoGroup: true,
    rightAlign: true,
    oncleared: function () { self.Value(''); }
  });
  $('#road_km').inputmask("numeric", {
    radixPoint: ".",
    groupSeparator: ",",
    digits: 6,
    autoGroup: true,
    rightAlign: true,
    oncleared: function () { self.Value(''); }
  });
}
function get_number(id){
    return $(id).val().replace(/\,/g,'');
}
